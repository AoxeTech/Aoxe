<Project Sdk="Microsoft.NET.Sdk">
	
	<PropertyGroup>
		<TargetFrameworks>net6.0;net8.0</TargetFrameworks>
		<PackageVersion>2024.3.1</PackageVersion>
		<Version>2024.3.1</Version>
		<Description>DDD framework for Aoxe.</Description>
		<PackageTags>Aoxe;DDD;Framework</PackageTags>
		<PackageProjectUrl>https://github.com/AoxeTech/Aoxe</PackageProjectUrl>
		<RepositoryUrl>https://github.com/AoxeTech/Aoxe</RepositoryUrl>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<LangVersion>latest</LangVersion>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<RepositoryType>git</RepositoryType>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
		<EmbedUntrackedSources>true</EmbedUntrackedSources>
		<Authors>Mutuduxf</Authors>
	</PropertyGroup>
	
	<ItemGroup>
<!--		<PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />-->
		<PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.0" />
		<PackageReference Include="Aoxe.SequentialGuid" Version="2024.1.0" />
		<PackageReference Include="Aoxe.Serializer.Abstractions" Version="2024.1.0" />
		<PackageReference Include="Aoxe.Core" Version="2024.2.0" />
		<PackageReference Include="Aoxe.DDD.Abstractions" Version="2024.2.0" />
		<PackageReference Include="Aoxe.Shared" Version="2024.3.0" />
		<PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
	</ItemGroup>
	
	<ItemGroup Condition="'$(TargetFramework)' == 'net6.0'">
		<PackageReference Include="Microsoft.EntityFrameworkCore" Version="6.0.33" />
	</ItemGroup>
	
	<ItemGroup Condition="'$(TargetFramework)' == 'net8.0'">
		<PackageReference Include="Microsoft.EntityFrameworkCore" Version="8.0.8" />
	</ItemGroup>
	
</Project>