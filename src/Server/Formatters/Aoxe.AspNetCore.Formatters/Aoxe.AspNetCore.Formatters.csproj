<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <TargetFrameworks>net6.0;net8.0;</TargetFrameworks>
        <PackageVersion>2024.1.1</PackageVersion>
        <Version>2024.1.1</Version>
        <OutputType>Library</OutputType>
        <IsPackable>true</IsPackable>
        <Description>The formatters for asp.net core base by Aoxe.Serializers</Description>
        <PackageTags>Aoxe;asp.net core formatters</PackageTags>
        <PackageProjectUrl>https://github.com/AoxeTech/Aoxe/tree/master/src/Server/Formatters/Aoxe.AspNetCore.Formatters</PackageProjectUrl>
        <RepositoryUrl>https://github.com/AoxeTech/Aoxe</RepositoryUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <LangVersion>latest</LangVersion>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <RepositoryType>git</RepositoryType>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PublishRepositoryUrl>true</PublishRepositoryUrl>
        <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
        <EmbedUntrackedSources>true</EmbedUntrackedSources>
        <Authors>Mutuduxf</Authors>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Aoxe.Serializer.Abstractions" Version="2024.1.0" />
        <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>

</Project>
