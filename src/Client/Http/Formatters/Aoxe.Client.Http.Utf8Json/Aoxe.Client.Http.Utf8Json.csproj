<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.0;net6.0;net7.0</TargetFrameworks>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageVersion>2022.7.0</PackageVersion>
        <Version>2022.7.0</Version>
        <Authors>Mutuduxf</Authors>
        <Company>Mutuduxf</Company>
        <PackageTags>Aoxe;MicroService;Http Client;Formatter;Utf8Json;</PackageTags>
        <Description>The utf8json formatter for Aoxe http client.</Description>
        <PackageProjectUrl>https://github.com/PicoHex/Aoxe</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <LangVersion>latest</LangVersion>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Aoxe.Utf8Json" Version="2023.6.0" />
        <PackageReference Include="Aoxe.Client.Http.Formatter" Version="2022.9.0" />
    </ItemGroup>

</Project>
